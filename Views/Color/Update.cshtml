    <script>
        $(function () {
            $('#colorpicker').on('input', function () {
                $('#hexcolor').val(this.value).trim();
            });
            $('#hexcolor').on('input', function () {
                $('#colorpicker').val(this.value).trim();
            });
        });
        function Update() {
            var lst = {};
            lst.ID = $('#ID').val().trim();
            lst.Name = $('#ColorName').val().trim();
            lst.Image = $('#AnhDaiDien').val().trim();
            //lst.Description = $('#hexcolor').val().trim();
            lst.Ord = $('#ord').val();
            if ($('input[name="active"]:checked').val() == "active") {
                lst.Active = '1';
            } else {
                lst.Active = '0';
            }
            console.log(lst);
            $.ajax({
                url: '/Color/UpdateColor',
                type: 'POST',
                data: JSON.stringify({ lst: lst }),
                contentType: 'application/json, charset=utf-8',
                beforeSend: function () {
                    js_Loading(true, 1);
                },
                success: function (data) {

                    if (data == 1) {
                        Swal.fire(
                            'Update!',
                            'Update successful!',
                            'success'
                        )
                        js_Loading(false, 1);
                    }

                },
                error: function () {
                    js_Loading(false, 1);
                }

            });
            window.location = '/Color/Index';
        }
        function loc_xoa_dau(str) {
            str = str.toLowerCase();
            // Gộp nhiều dấu space thành 1 space
            str = str.replace(/\s+/g, '-');
            // loại bỏ toàn bộ dấu space (nếu có) ở 2 đầu của chuỗi
            str = str.trim();
            // bắt đầu xóa dấu tiếng việt  trong chuỗi
            str = str.replace(/à|á|ạ|ả|ã|â|ầ|ấ|ậ|ẩ|ẫ|ă|ằ|ắ|ặ|ẳ|ẵ/g, "a");
            str = str.replace(/è|é|ẹ|ẻ|ẽ|ê|ề|ế|ệ|ể|ễ/g, "e");
            str = str.replace(/ì|í|ị|ỉ|ĩ/g, "i");
            str = str.replace(/ò|ó|ọ|ỏ|õ|ô|ồ|ố|ộ|ổ|ỗ|ơ|ờ|ớ|ợ|ở|ỡ/g, "o");
            str = str.replace(/ù|ú|ụ|ủ|ũ|ư|ừ|ứ|ự|ử|ữ/g, "u");
            str = str.replace(/ỳ|ý|ỵ|ỷ|ỹ/g, "y");
            str = str.replace(/đ/g, "d");
            str = str.replace(/À|Á|Ạ|Ả|Ã|Â|Ầ|Ấ|Ậ|Ẩ|Ẫ|Ă|Ằ|Ắ|Ặ|Ẳ|Ẵ/g, "A");
            str = str.replace(/È|É|Ẹ|Ẻ|Ẽ|Ê|Ề|Ế|Ệ|Ể|Ễ/g, "E");
            str = str.replace(/Ì|Í|Ị|Ỉ|Ĩ/g, "I");
            str = str.replace(/Ò|Ó|Ọ|Ỏ|Õ|Ô|Ồ|Ố|Ộ|Ổ|Ỗ|Ơ|Ờ|Ớ|Ợ|Ở|Ỡ/g, "O");
            str = str.replace(/Ù|Ú|Ụ|Ủ|Ũ|Ư|Ừ|Ứ|Ự|Ử|Ữ/g, "U");
            str = str.replace(/Ỳ|Ý|Ỵ|Ỷ|Ỹ/g, "Y");
            str = str.replace(/Đ/g, "D");
            return str;
        }
        function getName() {
            debugger;
            var Name = $('#Name').val().trim();
            $.ajax({
                url: '/GroupProduct/getName',
                type: 'POST',
                data: JSON.stringify({ Name: Name }),
                contentType: 'application/json, charset=utf-8',
                beforeSend: function () {
                    js_Loading(true, 1);
                },
                success: function (data) {
                    if (data.code == 1) {
                        $('#Rewrite').val(data.link.Link + ".html");
                    }
                    if (data.code == 2) {
                        $('#Rewrite').val(data.link.Link1 + ".html");
                    }
                    if (data.code == 3) {
                        var a = $('#Name').val().trim();
                        $('#Rewrite').val(data.link.Link1 + loc_xoa_dau(a) + ".html");
                    }
                    if (data == 0) {
                        var a = $('#Name').val().trim();
                        $('#Rewrite').val(loc_xoa_dau(a) + ".html");
                    }
                    js_Loading(false, 1);
                },
                error: function () {
                    js_Loading(false, 1);
                }

            });

        }
    </script>
}