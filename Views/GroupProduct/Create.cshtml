<style>
    #container-img {
        margin: 0 0 7px 0px !important
    }

    .box-img {
        width: 100%;
        height: 100%;
        border: 1px solid #ccc
    }

    #container-img li {
        display: block;
        position: relative;
        margin: 3px 3px 3px 0;
        padding: 5px;
        float: left;
        width: 90px;
        height: 90px
    }

    .box-img img {
        width: 100%;
        height: 100%;
        object-fit: cover
    }

    .box-img:hover .btn-close {
        display: inline-block
    }

    .box-img .btn-close {
        position: absolute;
        top: 0;
        right: -2px;
        line-height: 20px;
        background: red;
        color: #fff;
        font-size: 14px;
        width: 20px;
        text-align: center;
        border-radius: 16px;
    }

    .box-image img {
        object-fit: cover;
    }

    img.attachment-thumbnail.size-thumbnail {
        height: 100px;
        object-fit: cover;
    }
</style>
<input type="text" id="cap" name="name" value="DM" hidden disabled />
<input type="text" id="getName" name="name" value="" disabled hidden />
