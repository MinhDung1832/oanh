                        <label class="col-md-3">Nội dung</label>
                        <div class="col-md-9">
                            @Html.TextArea("MoTa", (string)ViewBag.MoTa, new { @class = "ckeditor" })
                        </div>
                    </div>
                    <div class="row mt-2">
                        <label class="col-md-3">Tiêu đề từ khóa(Title)</label>
                        <div class="col-md-5" style="width: 30%; padding-left: 15px">
                            <textarea name="Name" id="Title" value="" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <label class="col-md-3">Nội dung hiển thị trong(Description)</label>
                        <div class="col-md-5" style="width: 30%; padding-left: 15px">
                            <textarea name="Name" id="Des" value="" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <label class="col-md-3">Nội dung hiển thị trong(Keyword)</label>
                        <div class="col-md-5" style="width: 30%; padding-left: 15px">
                            <textarea name="Name" id="Keyword" value="" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <label class="col-md-3">Tùy chọn</label>
                        <div class="col-md-3">
                            <label class="ui-checkbox ui-checkbox-primary">
                                <input type="checkbox" id="PageHome" name="PageHome" value="PageHome">
                                <span class="input-span"></span>Trang chủ
                            </label>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <label class="col-md-3">Hiển thị</label>
                        <div class="col-md-3">
                            <label class="ui-checkbox ui-checkbox-primary">
                                <input type="checkbox" id="Status" name="Status" value="Status">
